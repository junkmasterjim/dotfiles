# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Path to your Oh My Zsh installation.
ZSH_THEME="arrow"
zstyle ':omz:update' mode disabled  # disable automatic updates

# Which plugins would you like to load?
plugins=(
  git 
  zsh-autosuggestions 
  zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# exports

export LANG=en_US.UTF-8
export VISUAL="nvim"
export EDITOR="nvim"
export CPATH=/opt/homebrew/include # clang
export LIBRARY_PATH=/opt/homebrew/lib # clang

# Put aliases below
# You can check which aliases are currently active by running 'alias'

alias kittyconfig='v ~/.config/kitty/kitty.conf'
alias nvimconfig='v ~/.config/nvim/init.lua'
alias zshconfig='v ~/.zshrc'
alias ohmyzsh='v ~/.oh-my-zsh'

alias yabai-start="yabai --start-service && skhd --start-service"
alias yabai-stop="yabai --stop-service && skhd --stop-service"

alias :q='exit'
alias q='exit'

# r alias for ranger
alias r='. ranger'

# v alias for nvim
alias v='nvim'

# alias for kitten ssh
alias s='kitten ssh'

# run python3 with python or py
alias py='python3'
alias python='python3'

